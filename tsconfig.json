{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
          "@admin/*": ["resources/scripts/admin/*"],
          "@theme/*": ["resources/scripts/theme/default/*"],
          "@kernel/*": ["resources/scripts/kernel/*"],
      },
      "types": [
          "vue/types/vue",
          "@types/node",
          "@nuxt/types",
          "mande/nuxt"
      ],
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.tsx", "resources/js/**/*.vue"],
  "exclude": ["node_modules"]
}
